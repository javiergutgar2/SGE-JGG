<odoo>
  <data>

    <!-- Vista formulario -->
    <record model="ir.ui.view" id="reuniones_reunion_form">
      <field name="name">reuniones.reunion.form</field>
      <field name="model">reuniones.reunion</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <h1><field name="name"/></h1>
              <field name="sala"/>
              <field name="fecha_inicio"/>
              <field name="fecha_finalizacion"/>
              <field name="duracion"/>
              <field name="asientos"/>
              <field name="responsable"/>
              <field name="asistentes"/>
                <list>
                </list>
          </group>
        </form>
      </field>
    </record>

    <!-- vista lista -->
    <record model="ir.ui.view" id="reuniones_reunion_list">
      <field name="name">reuniones.reunion.list</field>
      <field name="model">reuniones.reunion</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="sala" widget="badge"/>
          <field name="fecha_inicio" string="Inicio"/>
          <field name="fecha_finalizacion" string="Finalización"/>
          <field name="asientos"/>
          <field name="asientos_ocupados" widget="progressbar"/>
        </list>
      </field>
    </record>

    <!-- Vista calendario -->
    <record model="ir.ui.view" id="reuniones_reunion_calendar">
      <field name="name">reuniones.reunion.from.calendar</field>
      <field name="model">reuniones.reunion</field>
      <field name="arch" type="xml">
        <calendar date_start="fecha_inicio" date_stop="fecha_finalizacion" color="sala">
          <field name="name"/>
          <field name="sala" widget="badge"/>
          <field name="fecha_inicio" string="Inicio"/>
          <field name="fecha_finalizacion" string="Finalización"/>
          <field name="asientos"/>
          <field name="asientos_ocupados" widget="progressbar"/>
        </calendar>
      </field>
    </record>



    <record model="ir.actions.act_window" id="reuniones_reunion_action_window">
      <field name="name">Reuniones</field>
      <field name="res_model">reuniones.reunion</field>
      <field name="view_mode">list,form,calendar</field>
    </record>

    <menuitem id="reuniones_menu_root" name="Gestión de Reuniones"/>

    <menuitem id="reuniones_menu_reunion"
              name="Reuniones"
              parent="reuniones_menu_root"
              action="reuniones_reunion_action_window"/>

  </data>
</odoo>