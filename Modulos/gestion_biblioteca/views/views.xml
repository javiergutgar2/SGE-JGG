<odoo>
  <data>
    <record model="ir.ui.view" id="gestion_biblioteca.libro_form">
      <field name="name">Libro (Form)</field>
      <field name="model">gestion_biblioteca.libro</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <h1>
              <field name="name"/>
            </h1>
            <field name="autor"/>
            <field name="description"/>
            <field name="active"/>
            <field name="isbn"/>
            <field name="fecha"/>
            <field name="idioma"/>
            <field name="portada" widget="image" options="{'preview_image': 'portada', 'size': [200, 300]}"/>
          </group>
        </form>
      </field>
  </record>

  <record model="ir.ui.view" id="gestion_biblioteca.libro_list">
    <field name="name">Libro (List)</field>
    <field name="model">gestion_biblioteca.libro</field>
    <field name="arch" type="xml">
      <list>
        <field name="active"/>
        <field name="isbn"/>
        <field name="name"/>
        <field name="autor"/>
        <field name="idioma"/>
      </list>
    </field>
  </record>

  <record model="ir.ui.view" id="gestion_biblioteca.autor_form">
    <field name="name">Autor (Form)</field>
    <field name="model">gestion_biblioteca.autor</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <h1>
            <field name="name"/>
          </h1>
          <field name="pais"/>
        </group>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="gestion_biblioteca.autor_list">
    <field name="name">Autor (List)</field>
    <field name="model">gestion_biblioteca.autor</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="pais"/>
      </list>
    </field>
  </record>

  <record model="ir.actions.act_window" id="gestion_biblioteca.libro_action_window">
    <field name="name">Libros</field>
    <field name="res_model">gestion_biblioteca.libro</field>
    <field name="view_mode">list,form</field>
  </record>

  <record model="ir.actions.act_window" id="gestion_biblioteca.autor_action_window">
    <field name="name">Autores</field>
    <field name="res_model">gestion_biblioteca.autor</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem name="GestiÃ³n de Biblioteca" id="gestion_biblioteca.menu_root"/>

  <menuitem name="Libros" id="gestion_biblioteca.menu_libros"
    parent="gestion_biblioteca.menu_root"
    action="gestion_biblioteca.libro_action_window"/>
    <menuitem name="Autores" id="gestion_biblioteca.menu_autor"
    parent="gestion_biblioteca.menu_root"
    action="gestion_biblioteca.autor_action_window"/>





  




